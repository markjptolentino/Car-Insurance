@* Views/Insuree/Edit.cshtml *@
@model CarInsurance.Models.Insuree

@{
    ViewData["Title"] = "Edit Insuree";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <h1>Edit Insuree</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="form-animate">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CarYear" class="control-label"></label>
                    <input asp-for="CarYear" class="form-control" />
                    <span asp-validation-for="CarYear" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CarMake" class="control-label"></label>
                    <input asp-for="CarMake" class="form-control" />
                    <span asp-validation-for="CarMake" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CarModel" class="control-label"></label>
                    <input asp-for="CarModel" class="form-control" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 form-check">
                    <input asp-for="DUI" class="form-check-input" />
                    <label asp-for="DUI" class="form-check-label"></label>
                    <span asp-validation-for="DUI" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SpeedingTickets" class="control-label"></label>
                    <input asp-for="SpeedingTickets" class="form-control" />
                    <span asp-validation-for="SpeedingTickets" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 form-check">
                    <input asp-for="CoverageType" class="form-check-input" />
                    <label asp-for="CoverageType" class="form-check-label">Full Coverage</label>
                    <span asp-validation-for="CoverageType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary btn-animate" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-animate">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}