@* Views/Insuree/Admin.cshtml *@
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Admin - All Quotes";
}

<div class="container mt-5 animate__animated animate__fadeIn">
    <h1>All Insurance Quotes</h1>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email Address</th>
                <th>Quote</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="animate__animated animate__fadeInUp">
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.Quote.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-animate">Back to Insurees</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var table = document.querySelector('.table');
            Sortable.create(table.tBodies[0], { animation: 150 });
        });
    </script>
}